<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalazarExamen.Login">

    <StackLayout Padding="60" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
        <Image x:Name="imgLogo" Aspect="AspectFit" HorizontalOptions="Center" WidthRequest="2000"  
               Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>

        <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
        <Entry x:Name="txtClave" Placeholder="Contraseña" IsPassword="True"/>

        <Button x:Name="btnIngresar" Text="Login" Clicked="btnIngresar_Clicked"/>

    </StackLayout>

    

</ContentPage>
